{
    "setname": "Set-Name",
    "width":    1180,
    "height":   1720,
    "body": [
        {
            "type":             "rectangle",
            "desc":             "Border",
            "x":                0,
            "y":                0,
            "height":           "100%",
            "width":            "100%",
            "border_radius":    5,
            "color":           "$var_border_color"
        },
        {
            "type":             "rectangle",
            "desc":             "Background",
            "x":                "$var_border_width",
            "y":                "$var_border_width",
            "width":            "!50",
            "height":           "!50",
            "color":            "$var_background"
        },
        {
            "type":             "rectangle",
            "desc":             "Header Block",
            "x":                "$var_border_width",
            "y":                "$var_border_width",
            "width":            "!50",
            "height":           100,
            "color":            "$var_header_color"
        },
        {
            "type":             "text",
            "desc":             "Header Text",
            "x":                0,
            "y":                100,
            "text":             "$var_title",
            "font_size":        75,
            "color":            "#FFFFFF",
            "anchor":           "lm"
        },
        {
            "type":             "text",
            "desc":             "Header Text",
            "x":                "!130",
            "y":                30,
            "text":             "$var_author",
            "font_size":        30,
            "color":            "#FFFFFF",
            "anchor":           "rt"
        },
        {
            "type":             "image",
            "anchor":           "rt",
            "x":                "!25",
            "y":                25,
            "width":            100,
            "height":           100
        },
        {
            "type":             "text",
            "desc":             "Header Text",
            "x":                "50%",
            "y":                "50%",
            "text":             "$var_text",
            "font_size":        50,
            "color":            "$var_text_color",
            "anchor":           "mm",
            "calculation_example":  "&$var_border_width + 25 * 3 + $width / w_%40 + w_!54 * ( h_!43 / $var_border_width )"
        }
    ],
    "var_background":   "#FFFFFF",
    "var_border_color": "#000000",
    "var_border_width": 25,
    "var_header_color": "#660940",
    "var_title":        "Card Title",
    "var_author":       "Card Author",
    "var_id":           "Card ID",
    "var_text":         "Some Card Text",
    "var_text_color":   "#F44336"
}
